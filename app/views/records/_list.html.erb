<br>
<ul class="list-group text-center">
  <li class="list-group-item active row">
    <div class="col-sm-3"><%= t('record.money') %></div>
    <div class="col-sm-3"><%= t('record.type') %></div>
    <div class="col-sm-3"><%= t('record.label') %></div>
    <div class="col-sm-3">#</div>
  </li>
  <% records.each do |record| %>
  <li class="list-group-item row">
    <%= link_to record_path(record), class: "list-group-item list-group-item-#{type_css_for(record)} col-sm-9" do %>
    <div class="col-sm-4"><%= record.money %></div>
    <div class="col-sm-4"><%= record.type %></div>
    <div class="col-sm-4"><%= record.label %></div>
    <% end %>
    <div class="col-sm-3">
      <div class="btn-group">
        <%= link_to t('edit'), edit_record_path(record), class: "btn btn-default" %>
        <%= link_to t('destroy'), record_path(record), method: :delete, data: { confirm: t('sure?') }, class: "btn btn-danger" %>
      </div>
    </div>
    <% end %>
</ul>
