<%= link_to t('back'), records_path, class: "btn btn-default pull-left" %>
<div class="btn-group pull-right">
  <%= link_to t('edit'), edit_record_path(@record), class: "btn btn-default" %>
  <%= link_to t('destroy'), record_path(@record), method: :delete, data: { confirm: t('sure?') }, class: "btn btn-danger" %>
</div>
<h1 class="text-center"><%= @record.type %></h1>
<div class="container">
  <%= render 'details', record: @record %>
</div>
